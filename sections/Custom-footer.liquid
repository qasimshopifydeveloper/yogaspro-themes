<style>
    .custom-footer-section_d1{
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: {{ section.settings.footer_bg_color | default: '#72866D' }};
        padding-top: {{ section.settings.section_padding_top | default: 30 }}px;
        padding-bottom: {{ section.settings.section_padding_bottom | default: 0 }}px;
    }
    .custom-footer-container_d1{
        width: 100%;
    }
    .footer-Grid-container{
        width: 100%;
        display: grid;
        grid-template-columns: repeat({{ section.settings.grid_columns | default: 4 }}, 1fr);
        gap: {{ section.settings.grid_gap | default: 30 }}px;
        padding-top: {{ section.settings.grid_padding_top | default: 30 }}px;
        padding-bottom: {{ section.settings.grid_padding_bottom | default: 30 }}px;
        padding-left: {{ section.settings.container_padding_horizontal | default: 0 }}px;
        padding-right: {{ section.settings.container_padding_horizontal | default: 0 }}px;
    }
    .grid-logo-block{
        width: 100%;
    }
    .logo-block-image{
        width: 100%;
        display: flex;
        justify-content: flex-start;
        margin-bottom: {{ section.settings.logo_margin_bottom | default: 24 }}px;
    }
    .logo-block-image img{
        width: 100%;
        max-width: {{ section.settings.logo_max_width | default: 140 }}px;
        height: auto;
    }
    .logo-block-footer{
        display: flex;
        flex-direction: column;
        gap: {{ section.settings.logo_info_gap | default: 0 }}px;
    }
    .logo-footer-description{
        color: {{ section.settings.description_text_color | default: 'rgba(255, 255, 255, 0.4)' }};
        font-size: {{ section.settings.description_font_size | default: 16 }}px;
        font-family: {{ section.settings.body_font.family | default: 'jost, sans-serif' }};
        margin-bottom: {{ section.settings.description_margin_bottom | default: 10 }}px;
    }
    .logo-footer-info{
        display: flex;
        justify-content: flex-start;
        align-items: center;
        margin-bottom: {{ section.settings.info_item_spacing | default: 5 }}px;
    }
    .logo-footer-info p{
        color: {{ section.settings.info_label_color | default: 'rgba(255, 255, 255, 0.4)' }};
        font-size: {{ section.settings.info_font_size | default: 16 }}px;
        font-family: {{ section.settings.body_font.family | default: 'jost, sans-serif' }};
        margin-right: {{ section.settings.info_label_spacing | default: 8 }}px;
    }
    .logo-footer-info span{
        color: {{ section.settings.info_text_color | default: 'white' }};
        font-size: {{ section.settings.info_font_size | default: 16 }}px;
        font-family: {{ section.settings.body_font.family | default: 'jost, sans-serif' }};
    }
    .grid-links-block{
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: flex-start;
    }
    .grid-link-title{
        width: 100%;
        position: relative;
        padding-top: {{ section.settings.link_title_padding_top | default: 10 }}px;
        padding-bottom: {{ section.settings.link_title_padding_bottom | default: 10 }}px;
        margin-bottom: {{ section.settings.link_title_margin_bottom | default: 15 }}px;
    }
    .grid-link-title h2{
        position: relative;
        font-size: {{ section.settings.link_title_font_size | default: 18 }}px;
        color: {{ section.settings.link_title_color | default: 'white' }};
        font-family: {{ section.settings.heading_font.family | default: 'jost, sans-serif' }};
        font-weight: {{ section.settings.link_title_font_weight | default: 500 }};
    }
    {% if section.settings.show_underline %}
    .grid-link-title h2::before {
        content: '';
        position: absolute;
        bottom: -{{ section.settings.underline_spacing | default: 5 }}px;
        left: 0;
        width: {{ section.settings.underline_width | default: 60 }}px;
        height: {{ section.settings.underline_height | default: 1 }}px;
        
        background-color: {{ section.settings.underline_color | default: '#ffffff26' }};
         background-color: rgb(255, 255, 255, .15);

    }
    {% endif %}
    .grid-manue-links{
        width: 100%;
        display: flex;
        flex-direction: column;
        gap: {{ section.settings.link_spacing | default: 0 }}px;
        margin-left: 0;
        padding-left: 0;
    }
    .grid-manue-links li{
        list-style: none;
        position: relative;
        padding: {{ section.settings.link_item_padding | default: 5 }}px 0;
    }
    .grid-manue-links li a{
        text-decoration: none;
        color: {{ section.settings.link_text_color | default: 'rgba(255, 255, 255, 0.4)' }};
        font-size: {{ section.settings.link_font_size | default: 16 }}px;
        font-family: {{ section.settings.body_font.family | default: 'jost, sans-serif' }};
        font-weight: {{ section.settings.link_font_weight | default: 500 }};
        transition: all {{ section.settings.link_transition_duration | default: 0.5 }}s ease;
        position: relative;
        display: block;
    }
    .grid-manue-links li:hover a{
        transform: translateX({{ section.settings.link_hover_transform | default: 10 }}px);
        color: {{ section.settings.link_hover_color | default: 'white' }};
    }
    .grid-media-block{
        width: 100%;
    }
    .media-block-container{
        width: 100%;
        display: grid;
        grid-template-columns: repeat({{ section.settings.media_grid_columns | default: 3 }}, 1fr);
        gap: {{ section.settings.media_grid_gap | default: 14 }}px;
    }
    .media-block-container .block-media{ 
        width: 100%;
        border-radius: {{ section.settings.media_border_radius | default: 0 }}px;
        overflow: hidden;
    } 
    .media-block-container .block-media img{ 
        width: 100%;
        height: auto;
        aspect-ratio: 1;
        object-fit: cover;
        transition: transform {{ section.settings.media_hover_transition | default: 0.3 }}s ease;
        cursor: pointer;
    }
    .media-block-container .block-media:hover img{
        transform: scale({{ section.settings.media_hover_scale | default: 1.05 }});
    }
    .custom-footer-footer_d1{
        width: 100%;
        border-top: {{ section.settings.bottom_border_width | default: 1 }}px solid {{ section.settings.bottom_border_color | default: 'rgba(255, 255, 255, 0.4)' }};
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: {{ section.settings.bottom_padding_top | default: 20 }}px;
        padding-bottom: {{ section.settings.bottom_padding_bottom | default: 10 }}px;
        margin-top: {{ section.settings.bottom_margin_top | default: 30 }}px;
        flex-wrap: wrap;
        gap: {{ section.settings.bottom_items_gap | default: 20 }}px;
    }
    .footer-footer-info-block{
        display: flex;
        gap: {{ section.settings.copyright_items_gap | default: 4 }}px;
        justify-content: flex-start;
        align-items: center;
        flex-wrap: wrap;
    }
    .footer-footer-info-block span{
        color: {{ section.settings.copyright_text_color | default: 'white' }};
        font-weight: {{ section.settings.copyright_font_weight | default: 400 }};
        font-size: {{ section.settings.copyright_font_size | default: 14 }}px;
        font-family: {{ section.settings.body_font.family | default: 'jost, sans-serif' }};
    }
    .footer-footer-info-block a {
        text-decoration: none;
        font-weight: {{ section.settings.copyright_link_font_weight | default: 400 }};
        font-size: {{ section.settings.copyright_font_size | default: 14 }}px;
        font-family: {{ section.settings.body_font.family | default: 'jost, sans-serif' }};
        transition: color {{ section.settings.copyright_link_transition | default: 0.3 }}s ease;
        position: relative;
        display: inline-block;
    }
    /* Maverick Link Hover Effect */
    .footer-footer-info-block a::after {
        content: '';
        position: absolute;
        bottom: 0;
        right: 0;
        width: 0;
        height: 1px;
        background-color: currentColor;
        transition: width 0.5s ease, right 0.5s ease;
    }
    .footer-footer-info-block a:hover::after {
        width: 100%;
        right: 0;
    }
    .footer-footer-info-block a:hover {
        color: white !important;
    }
    .footer-footer-payment-block{
        display: flex;
        justify-content: flex-end;
    }
    .footer-footer-payment-block img{
        max-width: {{ section.settings.payment_image_width | default: 200 }}px;
        height: auto;
    }

    /* Mobile Responsive */
    @media (max-width: 768px) {
        .footer-Grid-container{
            grid-template-columns: repeat({{ section.settings.mobile_grid_columns | default: 1 }}, 1fr);
            gap: {{ section.settings.mobile_grid_gap | default: 30 }}px;
        }
        .custom-footer-footer_d1{
            flex-direction: {{ section.settings.mobile_bottom_direction | default: 'column' }};
            text-align: {{ section.settings.mobile_text_align | default: 'center' }};
        }
        .footer-footer-payment-block{
            justify-content: {{ section.settings.mobile_payment_align | default: 'center' }};
        }
        .logo-block-image{
            justify-content: {{ section.settings.mobile_logo_align | default: 'center' }};
        }
        .grid-links-block{
            align-items: {{ section.settings.mobile_links_align | default: 'center' }};
        }
        {% if section.settings.show_underline and section.settings.mobile_center_underline %}
        .grid-link-title h2::after {
            left: 50%;
            transform: translateX(-50%);
        }
        {% endif %}
    }
    /* Style info links with custom pre-hover color and menu link effects */
.logo-footer-info a {
    text-decoration: none;
    font-size: {{ section.settings.link_font_size | default: 16 }}px;
    transition: all {{ section.settings.link_transition_duration | default: 0.5 }}s ease;
    position: relative;
    display: inline-block;
}

/* Hover effects matching grid-manue-links */
.logo-footer-info a:hover {
    transform: translateX({{ section.settings.link_hover_transform | default: 10 }}px);
    color: {{ section.settings.link_hover_color | default: 'white' }} !important;
}

/* Fix for address link if it's wrapped in a span */
.logo-footer-info span a {
    color: inherit !important;
}
</style>


<section class="custom-footer-section_d1">
    <div class="custom-footer-container_d1 xo-container-width">
        <div class="footer-Grid-container">
            {% for block in section.blocks %}
                {% case block.type %}
                    {% when 'logo' %}
                        <div class="grid-logo-block" {{ block.shopify_attributes }}>
                            <div class="logo-block-image">
                                {% if block.settings.logo %}
