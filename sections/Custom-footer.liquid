                                    <img src="{{ block.settings.logo | image_url }}" 
                                         width="{{ block.settings.logo.width }}" 
                                         height="{{ block.settings.logo.height }}"
                                         alt="{{ block.settings.logo.alt | default: shop.name }}">
                                    </a>
                                {% else %}
                                    <img src="{{ 'logo.webp' | asset_url }}" 
                                         width="140" 
                                         height="auto"
                                         alt="{{ shop.name }}">
                                {% endif %}
                            </div>
                            <div class="logo-block-footer">
                                {% if block.settings.description %}
                                    <div class="logo-footer-description">
                                        {{ block.settings.description }}
                                    </div>
                                {% endif %}
 
{% if block.settings.phone %}
    <div class="logo-footer-info">
        <p>{{ block.settings.phone_label | default: 'Phone:' }}</p>
        <span><a href="tel:{{ block.settings.phone | remove: ' ' }}">{{ block.settings.phone }}</a></span>
    </div>
{% endif %}
                               
{% if block.settings.email %}
    <div class="logo-footer-info">
        <p>{{ block.settings.email_label | default: 'E-mail:' }}</p>
        <span><a href="mailto:{{ block.settings.email }}">{{ block.settings.email }}</a></span>
    </div>
{% endif %}

{% if block.settings.address %}
    <div class="logo-footer-info">
        <p>{{ block.settings.address_label | default: 'Address:' }}</p>
        {% if block.settings.address_link %}
            <span><a href="{{ block.settings.address_link }}" target="_blank">{{ block.settings.address }}</a></span>
        {% else %}
            <span>{{ block.settings.address }}</span>
        {% endif %}
    </div>
{% endif %}

{% if block.settings.opening_hours %}
    <div class="logo-footer-info">
        <p>{{ block.settings.opening_hours_label | default: 'Opening Hours:' }}</p>
        {% if block.settings.opening_hours_link %}
            <span><a href="{{ block.settings.opening_hours_link }}" target="_blank">
                {{ block.settings.opening_hours | newline_to_br }}
            </a></span>
        {% else %}
            <span>{{ block.settings.opening_hours | newline_to_br }}</span>
        {% endif %}
    </div>
{% endif %}


                            </div>
                        </div>
                        
                    {% when 'links' %}
                        <div class="grid-links-block" {{ block.shopify_attributes }}>
                            {% if block.settings.heading %}
                                <div class="grid-link-title">
                                    <h2>{{ block.settings.heading }}</h2>
                                </div>
                            {% endif %}
                            {% if block.settings.menu != blank %}
                                <ul class="grid-manue-links">
                                    {% for link in linklists[block.settings.menu].links %}
                                        <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                                    {% endfor %}
                                </ul>
                            {% endif %}
                        </div>
                        
                    {% when 'media' %}
                        <div class="grid-media-block" {{ block.shopify_attributes }}>
                            {% if block.settings.heading %}
                                <div class="grid-link-title">
                                    <h2>{{ block.settings.heading }}</h2>
                                </div>
                            {% endif %}
                            <div class="media-block-container">
                                {% for i in (1..6) %}
                                    {% assign image_setting = 'image_' | append: i %}
                                    {% if block.settings[image_setting] %}
                                        <div class="block-media">
                                            <img src="{{ block.settings[image_setting] | image_url }}" 
                                                 width="{{ block.settings[image_setting].width }}"
                                                 height="{{ block.settings[image_setting].height }}"
                                                 alt="{{ block.settings[image_setting].alt | default: 'Social media image' }}">
                                        </div>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        </div>
                        
                    {% when 'custom_content' %}
                        <div class="grid-custom-block" {{ block.shopify_attributes }}>
                            {% if block.settings.heading %}
                                <div class="grid-link-title">
                                    <h2>{{ block.settings.heading }}</h2>
                                </div>
                            {% endif %}
                            {% if block.settings.content %}
                                <div class="custom-content" style="color: {{ block.settings.text_color | default: 'rgba(255, 255, 255, 0.4)' }}; font-size: {{ block.settings.font_size | default: 16 }}px;">
                                    {{ block.settings.content }}
                                </div>
                            {% endif %}
                        </div>
                {% endcase %}
            {% endfor %}
        </div>

        {% if section.settings.show_bottom_bar %}
            <div class="custom-footer-footer_d1">
                <div class="footer-footer-info-block heading text-subdued" style="direction: rtl; text-align: right;">
                    <a href="{{ section.settings.developer_link | default: 'https://maverick-biz.com/' }}" 
                       target="_blank" 
                       rel="noopener noreferrer" 
                       class="maverick-link"
                       style="color: {{ section.settings.developer_color | default: 'rgba(255, 255, 255, 0.6)' }};">
                        כל הזכויות שמורות ל{{ shop.name }} © {{ 'now' | date: '%Y' }} | האתר נבנה ב ❤️ גדולה ע"י MAVERICK שיווק ופיתוח עסקי
                    </a>
                </div>

                {% if section.settings.payment_image %}
                    <div class="footer-footer-payment-block">
                        <img src="{{ section.settings.payment_image | image_url }}" 
                             width="{{ section.settings.payment_image.width }}"
                             height="{{ section.settings.payment_image.height }}"
                             alt="Accepted payment methods">
                    </div>
                {% endif %}
            </div>
        {% endif %}
    </div>
</section>

