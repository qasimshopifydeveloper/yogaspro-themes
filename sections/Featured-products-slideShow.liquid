<style>
    *{
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }
    .featured-slider-section_d1{
        width: 100%;
        height: auto;
        padding-block: {{ section.settings.section_padding_top }}px {{ section.settings.section_padding_bottom }}px;
        background-color: {{ section.settings.section_background_color }};
        margin-top: {{ section.settings.section_margin_top }}px;
        margin-bottom: {{ section.settings.section_margin_bottom }}px;
    }
    .featured-slider-products-container{
        width: 100%;
        max-width: 1600px;
        margin: 0 auto;
        padding-inline: {{ section.settings.container_padding }}px;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: {{ section.settings.container_gap }}px;
    }
    .products-slider-container{
        width: 50%
    }
    .products-slider-header{
        width: 100%;
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 10px;
        border-bottom: 1px solid {{ section.settings.slider_border_color }};
    }
    .slider-heading{
        width: auto;
        padding-bottom: 10px;
    }
    .slider-heading h2{
        width: fit-content;
        text-transform: uppercase;
        font-size: {{ section.settings.slider_title_font_size }}px;
        font-family:jost,sans-serif;
        color: {{ section.settings.slider_title_color }};
        position: relative;
    }
    .slider-heading h2::after {
        content:'';
       width:50%;
       background:rgba(114,134,109);
       height:3px;
       position:absolute;
       bottom:-11px;
       left:0;
       display:inline-block;

    }
    .slider-controls{
        display: flex;
        gap: 2px;
    }
    .slider-controls button{
       border: none;
    background: none;
    box-shadow: none;
    cursor: pointer;
    padding: 4px 6px;
    transition: 0.4s;
    }
    .slider-controls button:hover{
        background-color: {{ section.settings.slider_button_hover_color }};
    }
     .slider-controls button:hover svg{
        color: white;
    }
    .slider-controls .prevbtn{
        border-right: 1px solid rgb(0 0 0 / 10%);
    border-top-left-radius: 5px;
    border-bottom-left-radius: 5px;
    }
    .slider-controls .nextbtn{
        border-left: 1px solid rgb(0 0 0 / 10%);
    border-top-right-radius: 5px;
    border-bottom-right-radius: 5px;
    }
    .products-swipper-slider{
        width: 100%;
    }
    .featurec-collection-product{
          width: 100%;
      height: auto;
      overflow: hidden;
      background: transparent;
      position: relative;
    }
    .swiper-slide {
      text-align: center;
      font-size: 18px;
      background: transparent;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .swiper-slide img {
      display: block;
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .advertise-products-container{
        width: 50%;
        border: 2px solid {{ section.settings.deals_border_color }};
        padding-inline: {{ section.settings.deals_padding }}px;
        padding-bottom: {{ section.settings.deals_padding }}px;
        background-color: {{ section.settings.deals_background_color }};
        position: relative;
    }
    .advertise-banner-title{
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        position: absolute;
        top: 0%;
        left: 0;
        transform: translateY(-50%);
    }
    .advertise-banner-title h2{
        font-size: {{ section.settings.deals_title_font_size }}px;
        font-family: jost,sans-serif;
        background-color: {{ section.settings.deals_title_bg_color }};
        color: {{ section.settings.deals_title_color }};
        padding: {{ section.settings.deals_title_padding_tb }}px {{ section.settings.deals_title_padding_lr }}px;
        border-radius: 8px;
        text-align: center;
        text-transform: uppercase;
        width: fit-content;
    }
    .advertise-products-grid{
    width:100%;
    display:flex;
    gap: {{ section.settings.deals_grid_gap }}px;
    justify-content:center;
    align-items:center;
    margin-top: {{ section.settings.deals_grid_margin_top }}px;
    }
    .select_featured_product{
    width:50%;
    height:auto
    }
{% comment %}     featured-product-card         {% endcomment %}
          .Featured_product_card{
        width:100%;
        height:100%;
        display:flex;
        flex-direction:column;
        gap:auto
    }
    .Featured_product_card_header{
        width:100%;
        height:auto;
        position: relative;
    }
    .Featured_product_image{
        width: 100%;
        height: auto;
        position: relative;
        overflow: hidden;
    }
    .product-image-banner{
    font-size: {{ section.settings.sale_badge_font_size }}px;
    font-weight: 500;
    letter-spacing: .1rem;
    line-height: 1.21;
    color: {{ section.settings.sale_badge_text_color }};
    height: auto;
    display: flex;
    z-index: 10;
    pointer-events: none;
    width: 110px;
    height: 28px;
    justify-content: center;
    align-items: center;
    background-color: {{ section.settings.sale_badge_bg_color }};
    position:absolute;
        top: 13px;
    right: -26px;
   transform: rotate(45deg);
    }
    .Featured_product_image a{
        width: 100%;
        display: block;
        text-decoration: none;
        position: relative;
    }
    .Featured_product_image a img{
        width: 100%;
        height: 330px;
        object-fit: cover;
        transition: opacity 0.3s ease;
    }
    
    /* Second image hover effect */
    .product-image-secondary {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 330px;
        object-fit: cover;
        opacity: 0;
        transition: opacity 0.3s ease;
    }
    
    .Featured_product_card:hover .product-image-secondary {
        opacity: 1;
    }
    
    .product-icons-overlay{
        width: 100%;
        display: flex;
        flex-direction: column;
        gap: 12px;
        justify-content: center;
        align-items: center;
        position: absolute;
        bottom: 10%;
    }
    .custom-icons-container{
        width: 100%;
        height: 100%;
        transition: 0.3s;
        transform: translateY(20px);
        display: flex;
        gap: 10px;
        justify-content: center;
        align-items: center;
        opacity: 0;
    }
    .Featured_product_card:hover .custom-icons-container{
        transform: translateX(0px);
        opacity: 1;
    }

    .custom-icon-box{
        width: auto;
        height: auto;
        position: relative;
    }
    .custom-swatches-container{
        width: 100%;
        display: flex;
        gap: 10px;
        justify-content: center;
        align-items: center;
        padding: 10px 0px;
        transition: 1s;
        opacity: 0;
        transform: translateY(20px);
        transition: opacity 0.3s ease, transform 0.3s ease;
        height: 20px;
    }
    .Featured_product_card:hover .custom-swatches-container{
        opacity: 1;
        transform: translateY(0px);
        transition: opacity 1s ease 0.3s, transform 1s ease 0.3s;
    }
    .color-swatch{
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background-color: red;
        transition: 0.3s;
        cursor: pointer;
        border: 2px solid transparent;
    }
    .color-swatch:hover,
    .color-swatch.active{
        width: 14px;
        height: 14px;
        border-color: #333;
    }
    .icon-button{
        color: none;
        border:none;
        border-radius: 50%;
        background: {{ section.settings.icon_button_bg_color }};
        width: 40px;
        height: 40px;
        display: flex;
        justify-content: center;
        align-items: center;
        cursor: pointer;
        position: relative;
        transition:0.5s
    }
    .icon-button:hover{
        background: {{ section.settings.icon_button_hover_bg_color }};
    }
    .icon-button:hover svg{
        color: {{ section.settings.icon_button_hover_color }};
    }
    .button-banner{
        position: absolute;
        top: -50px;
        left: 50%;
        transform: translateX(-50%);
        opacity: 0;
        transition: 0.4s;
        width: auto;
        pointer-events: none;
        white-space: nowrap;
    }
    .custom-icon-box:hover .button-banner{
        opacity: 1;
        top: -40px;
    }
    .button-banner-inner{
        width: auto;
        height: auto;
        position: relative;
    }
    .button-banner-inner span{
        display: inline-block;
        width: auto;
        color: {{ section.settings.tooltip_text_color }};
        background-color: {{ section.settings.tooltip_bg_color }};
        font-size: {{ section.settings.tooltip_font_size }}px;
        padding: 2px 3px;   
        border-radius: 4px;
        position: relative;
        width: 100%;
        display: flex;
        text-align: center;
        justify-content: center;
    }
    .button-banner-inner span::after{
        content: '';
        width: 8px;
        height: 8px;
        background-color: {{ section.settings.tooltip_bg_color }};
        position: absolute;
        bottom:-4px;
        left: 50%;
        transform: translateX(-50%) rotate(45deg);
    }
    .product_description_d1{
        width:100%;
        display:flex;
        justify:center;
        flex-direction:column;
        gap:5px;
        margin-top: 12px;
    }
    .product_description_d1 h2{
        width:100%;
        font-size: {{ section.settings.product_title_font_size }}px;
        text-align:center;
        font-family: jost,sans-serif;
        color: {{ section.settings.product_title_color }};
    }
    .Product_price_container{
        width:100%;
        display:flex;
        justify-content:center;
        align-items:center;
        gap:10px;
        justify-content: center;
    }
    .Product_price_container span:nth-child(1) {
        color: {{ section.settings.product_price_color }};
        font-size: {{ section.settings.product_price_font_size }}px;
        font-family: jost,sans-serif;
    }
    .Product_price_container span:nth-child(2){
        color: {{ section.settings.product_compare_price_color }};
        font-size: {{ section.settings.product_compare_price_font_size }}px;
        font-family: jost,sans-serif;
        text-decoration: line-through;
    }
    
    /* Loading state for add to cart */
    .icon-button.loading {
        pointer-events: none;
    }
    
    .icon-button.loading svg {
        animation: spin 1s linear infinite;
    }
    
    @keyframes spin {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }

