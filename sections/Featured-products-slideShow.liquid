      @media (max-width:767px) {
    .products-slider-header{
        border-bottom: none;
    flex-direction: column;
    gap: 8px;
    }
    .slider-heading h2::after {
        content:'';
       display:none
    }
    .advertise-products-grid {
        gap: 20px;
    }
    }
     @media (max-width:650px) {
   
    .advertise-products-grid{
    flex-direction:column;
    }
    .select_featured_product{
    width:100%
    }
    .Featured_product_image a img{
    height:auto !important;
    }
