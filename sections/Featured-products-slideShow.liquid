  <script>
    // Dynamic countdown timers for each block
    {% for block in section.blocks %}
      (function() {
        // Get the target date for this block
        const targetDate = new Date("{{ block.settings.countdown_end_date }}");
        const blockId = "{{ block.id }}";

        function updateCountdown() {
          const now = new Date();
          const diff = targetDate - now;

          if (diff <= 0) {
            document.getElementById("days-" + blockId).textContent = "00d";
            document.getElementById("hours-" + blockId).textContent = "00h";
            document.getElementById("minutes-" + blockId).textContent = "00m";
            document.getElementById("seconds-" + blockId).textContent = "00s";
            return;
          }

          const days = Math.floor(diff / (1000 * 60 * 60 * 24));
          const hours = Math.floor((diff / (1000 * 60 * 60)) % 24);
          const minutes = Math.floor((diff / (1000 * 60)) % 60);
          const seconds = Math.floor((diff / 1000) % 60);

          document.getElementById("days-" + blockId).textContent = `${days}d`;
          document.getElementById("hours-" + blockId).textContent = `${hours}h`;
          document.getElementById("minutes-" + blockId).textContent = `${minutes}m`;
          document.getElementById("seconds-" + blockId).textContent = `${seconds}s`;
        }

        updateCountdown(); // Initial call
        setInterval(updateCountdown, 1000);
      })();
