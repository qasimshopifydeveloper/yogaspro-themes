<style>
    .custom-sp-main-yopose-d10 {
        display: block;
        margin: 0 auto;
        padding: 50px 20px;
    }

    .custom-sp-inner-yopose-d10 {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        
        
    }

    .custom-sp-image-yopose-d10 {
        text-align: center;
    }

    .custom-sp-image-yopose-d10 img {
        max-width: 65px;
        transition: all 0.3s ease-in-out;
            margin: 0 auto;
    }

    .custom-sp-heading-yopose-d10 {
        text-align: center;
        margin: 15px 0px 10px 0px;
        font-size: 14px;
        font-weight: 500;
        letter-spacing: 3.2px;
        text-transform: uppercase;
        font-family: Jost, sans-serif;
        color: #000;
    }

    .custom-sp-paragraph-yopose-d10 {
        text-align: center;
        margin: 0px 0px 5px 0px;
        font-size: 15px;
        font-weight: 400;
        line-height: 1.48;
        letter-spacing: 0px;
        color: #000000BF;
    }

  
    @keyframes shake {
        0% {
            transform: translateX(0);
        }
        25% {
            transform: translateX(-5px);
        }
        50% {
            transform: translateX(5px);
        }
        75% {
            transform: translateX(-5px);
        }
        100% {
            transform: translateX(0);
        }
    }

   
    .custom-sp-image-yopose-d10 img:hover {
        animation: shake 0.5s ease-in-out;
    }
    .custom-sp-box-yopose-d10{
        padding: 0px 15px;
    }
    @media (max-width:767px){
        .custom-sp-inner-yopose-d10 {
        display: grid;
        grid-template-columns: repeat(1, 1fr);
        gap: 20px;
        
    } 
    .custom-sp-box-yopose-d10{
        padding: 0px;
        padding-bottom: 30px;
    }
     .custom-sp-paragraph-yopose-d10 {
        margin: 0px;
    }
      .custom-sp-main-yopose-d10 {
        
        padding:0px 20px;
    }

    }
</style>


<div class="custom-sp-main-yopose-d10">
    <div class="custom-sp-inner-yopose-d10 xo-container-width" >
{% for block in section.blocks %}
        <div class="custom-sp-box-yopose-d10">
            <div class="custom-sp-boxinner-yopose-d10">
                <div class="custom-sp-image-yopose-d10">
                    <img src="{{ block.settings.image1-d10| img_url: 'master' }}">
                </div>
                <div class="custom-sp-content-yopose-d10">
                    <h4 class="custom-sp-heading-yopose-d10" style="font-size:{{ block.settings.fontsize1-d10 }};">{{ block.settings.heading-d10 }}</h4>
                    <p class="custom-sp-paragraph-yopose-d10">{{ block.settings.para-d10 }}</p>
                </div>
            </div>
        </div>
{% endfor %}
      
    </div>
</div>


{% schema %}
  {
    "name": "Yopose-website-section",
    "settings": [],
    "blocks": [{
      "type": "add-block",
      "name":"block",
      "settings": [{
        "type": "image_picker",
        "id": "image1-d10",
        "label": "image-uplode",
      },
        {
          "type": "text",
        "id": "heading-d10",
        "label": "Heading",
        },
        {
          "type": "range",
          "id": "fontsize1-d10",
          "label": "Font Size",
          "min": 7,
          "max": 22,
          "unit": "px",
          "step": 1,
          "default": 14
        },

        {
          "type": "text",
        "id": "para-d10",
        "label": "Paragraph",
        }
      ]
    }],
    "presets": [{
      "name": "Yopose-website-section"
    }]
  }
{% endschema %}